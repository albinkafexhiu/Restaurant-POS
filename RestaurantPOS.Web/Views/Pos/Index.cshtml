@model RestaurantPOS.Web.Models.PosTablesViewModel

@{
    Layout = "_PosLayout";
    ViewData["Title"] = "POS - Tables";
}

<div class="page-header d-print-none">
    <div class="row align-items-center">
        <div class="col">
            <h2 class="page-title">Tables</h2>
            <div class="text-muted">Tap a table to open</div>
        </div>
    </div>
</div>

<div class="row row-cards">
    @foreach (var t in Model.Tables)
    {
        <div class="col-6 col-md-4 col-xl-3">
            <a asp-action="Table"
               asp-route-id="@t.TableId"
               class="card card-sm text-decoration-none text-reset h-100">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <div class="fw-bold">Table @t.TableNumber</div>
                            <span class="badge @t.StatusBadgeClass mt-2">@t.StatusText</span>
                        </div>

                        @if (t.HasOpenOrder)
                        {
                            <span class="badge bg-primary-lt">OPEN</span>
                        }
                    </div>

                    @if (t.HasOpenOrder)
                    {
                        <div class="mt-3 text-muted small">
                            Items: <span class="fw-bold">@t.ItemsCount</span><br />
                            Total: <span class="fw-bold">@t.RunningTotal</span> MKD
                        </div>
                    }
                    else
                    {
                        <div class="mt-3 text-muted small">
                            Ready for new order
                        </div>
                    }
                </div>
            </a>
        </div>
    }
</div>