@model RestaurantPOS.Web.Models.MealsIndexViewModel

@{
    ViewData["Title"] = "Meals Import (API)";
}

<div class="page-header d-print-none">
    <div class="row align-items-center">
        <div class="col">
            <h2 class="page-title">Meals Import (API)</h2>
            <div class="text-muted">Search TheMealDB, transform data, import into your menu</div>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-2">
            <div class="col-md-10">
                <input name="q" value="@Model.Query" class="form-control" placeholder="Search meals... (e.g. pizza, chicken, pasta)" />
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-primary" type="submit">
                    <i class="ti ti-search"></i>
                    Search
                </button>
            </div>
        </form>

        @if (!string.IsNullOrWhiteSpace(Model.Query))
        {
            <div class="text-muted mt-2">Showing results for: <b>@Model.Query</b></div>
        }
        else
        {
            <div class="text-muted mt-2">No query entered â†’ showing random suggestions.</div>
        }
    </div>
</div>

@if (Model.Meals == null || !Model.Meals.Any())
{
    <div class="alert alert-info">No meals found. Try a different search.</div>
}
else
{
    <div class="row">
        @foreach (var meal in Model.Meals)
        {
            var imported = !string.IsNullOrWhiteSpace(meal.ExternalId) && Model.ImportedExternalIds.Contains(meal.ExternalId);

            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-start justify-content-between">
                            <div class="me-2">
                                <h4 class="mb-1">@meal.Name</h4>
                                <div class="text-muted small">
                                    <span class="me-2"><b>Category:</b> @meal.Category</span>
                                    <span><b>Area:</b> @meal.Area</span>
                                </div>
                            </div>

                            @if (imported)
                            {
                                <span class="badge bg-success">Imported</span>
                            }
                        </div>

                        @if (meal.Ingredients != null && meal.Ingredients.Any())
                        {
                            <div class="mt-2">
                                <div class="text-muted small mb-1"><b>Ingredients:</b></div>
                                <div class="text-muted small">
                                    @string.Join(", ", meal.Ingredients.Take(8))@(meal.Ingredients.Count > 8 ? "..." : "")
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(meal.ShortInstructions))
                        {
                            <div class="mt-2">
                                <div class="text-muted small mb-1"><b>Instructions:</b></div>
                                <div class="text-muted small">@meal.ShortInstructions</div>
                            </div>
                        }
                    </div>

                    <div class="card-footer">
                        <div class="d-grid gap-2">
                            @if (imported)
                            {
                                <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Index">
                                    View Products
                                </a>
                            }
                            else
                            {
                                <form asp-action="Import" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="mealId" value="@meal.ExternalId" />
                                    <input type="hidden" name="q" value="@Model.Query" />

                                    <button type="submit" class="btn btn-success">
                                        <i class="ti ti-download"></i>
                                        Import to Menu
                                    </button>
                                </form>

                                <a class="btn btn-outline-primary"
                                   asp-controller="Products"
                                   asp-action="Create"
                                   asp-route-name="@meal.Name"
                                   asp-route-description="@meal.ShortInstructions">
                                    Open Create Form (manual)
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
