@model RestaurantPOS.Domain.Entities.Expense

@{
    ViewData["Title"] = "Add Expense";
    Layout = "_PosLayout";
}

<div class="page-header d-print-none">
    <div class="row align-items-center">
        <div class="col">
            <h2 class="page-title">Add expense</h2>
            <div class="text-muted">POS</div>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left"></i>
                Back
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Description</label>
                <input asp-for="Description" class="form-control" />
            </div>

            <div class="row g-2">
                <div class="col-md-4">
                    <label class="form-label">Amount (MKD)</label>
                    <input asp-for="Amount" type="number" min="0" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Date</label>
                    <input asp-for="Date" type="date" class="form-control"
                           value="@Model.Date.ToLocalTime().ToString("yyyy-MM-dd")" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Type</label>
                    <select asp-for="Type" class="form-select">
                        <option value="Supplies">Supplies</option>
                        <option value="Salary">Salary</option>
                        <option value="Maintenance">Maintenance</option>
                        <option value="Food">Food</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <div class="mt-3">
                <button class="btn btn-primary w-100" type="submit">
                    Save expense
                </button>
            </div>
        </form>
    </div>
</div>
