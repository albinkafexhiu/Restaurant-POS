@model IEnumerable<RestaurantPOS.Domain.Entities.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<h2>Expenses</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Expense</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Description</th>
        <th>Type</th>
        <th>Amount (MKD)</th>
        <th>Date</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Description</td>
            <td>@e.Type</td>
            <td>@e.Amount</td>
            <td>@e.Date.ToString("yyyy-MM-dd")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@e.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@e.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@e.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>